@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>@Html.LabelFor(model => model.StylistName, "Stylist Name"): @Html.DisplayFor(model => model.StylistName)<h3>
<hr />
@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added to this Stylist yet!</h3>
} 
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}
<hr />
<div id="nav">
  <a>@Html.ActionLink("Add new Client", "Create", "Clients")</a>|
  <a>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</a>|
  <a>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</a>|
  <a>@Html.ActionLink("Back to list", "Index")</a>
</div>