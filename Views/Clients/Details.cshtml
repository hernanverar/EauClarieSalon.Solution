@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | @client.Stylist.StylistName</li>
    }
  </ul>
}
<hr />
<div id="nav">
<a>@Html.ActionLink("Add new client", "Create")</a>|
<a>@Html.ActionLink("Back to stylists", "Index", "Stylists")</a>|
<a>@Html.ActionLink("Back Home", "Index", "Home")</a>
</div>